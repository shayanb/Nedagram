{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./dist-cli",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noEmit": true
  },
  "include": [
    "cli/**/*.ts",
    "src/encode/**/*.ts",
    "src/decode/**/*.ts",
    "src/lib/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components/**/*",
    "src/pages/**/*",
    "src/i18n/**/*",
    "src/app.tsx",
    "src/main.tsx"
  ]
}
